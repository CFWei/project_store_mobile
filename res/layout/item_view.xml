<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ItemLayout"
        android:layout_width="630dp"
        android:layout_height="310dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" >

            <TextView
                android:id="@+id/Item_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testitemname"
                android:textSize="60dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <TextView
                android:id="@+id/Now_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/testnum"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="150dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Now_Value"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/Now_Value"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" >
			
            <TextView
                android:id="@+id/WaitNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waitnum"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_alignParentLeft="true"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/WaitNum_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/WaitNum"
                android:hint="@string/test"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30dp" />
            
    

        <TextView
            android:id="@+id/taken_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/taken_number_value1"
            android:text="@string/taken_number"
            android:textSize="30dp" />
        
     	<TextView
            android:id="@+id/taken_number_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/num"
            android:textSize="30dp" />
     	
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            
            android:text="@string/num"
            android:textSize="30dp" />
            
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>